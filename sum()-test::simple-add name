use strict;
use warnings;

use FindBin;
use lib "$FindBin::Bin/../lib";
use MyTools;

use Test::Simple tests => 3;

ok(sum(1, 1)==2, '1+1');
ok(sum(2, 2)==4, '2+2');
ok(sum(2, 2, 2)==6, '2+2+2');
#It can get two arguments. 
#The first one indicates success or failure of the test as explained earlier. 
#The second one is a string which is the name of the test.
